{
  "name": "shamir-secret-sharing-extended",
  "version": "0.1.2",
  "description": "Zero-dependency TypeScript implementation of Shamir's Secret Sharing (t-of-n threshold scheme) for Node.js and browsers.",
  "license": "MIT",
  "author": "Onur Nizam <onur.nizam@gmail.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/onur-nizam/shamir-secret-sharing-extended.git"
  },
  "bugs": {
    "url": "https://github.com/onur-nizam/shamir-secret-sharing-extended/issues"
  },
  "homepage": "https://github.com/onur-nizam/shamir-secret-sharing-extended#readme",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "start": "tsx src/demo.ts",
    "build": "tsc -p tsconfig.json",
    "test": "vitest run --config vitest.config.ts",
    "test:gf256": "vitest run test/gf256.test.ts",
    "test:poly": "vitest run test/polynomial.test.ts",
    "test:rng": "vitest run test/rng.test.ts",
    "test:split": "vitest run test/split.test.ts",
    "test:watch": "vitest"
  },
  "directories": {
    "test": "test"
  },
  "keywords": [
    "shamir",
    "secret-sharing",
    "sss",
    "threshold",
    "cryptography",
    "typescript",
    "zero-dependency"
  ],
  "devDependencies": {
    "@types/node": "^20.19.11",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "publishConfig": {
    "access": "public"
  }
}
